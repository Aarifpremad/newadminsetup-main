<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders</title>
    <link rel="stylesheet" href="/dashboard.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <style>
        .main-container {
            display: flex;
        }

        .content-container {
         margin-left: 260px; 
         margin-top: 70px; 
          padding: 20px;
          width: calc(100% - 260px);
         height: 100vh;
        }
        .table-container {
            margin-top: 20px;
        }
        /* Table Styles */
        table.dataTable, table.dataTable th, table.dataTable td {
            border: 1px solid #dee2e6 !important;
        }
        table.dataTable th {
            background-color: #f8f9fa;
        }
        table.dataTable tbody tr:hover {
            background-color: #f1f3f5;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>
    <div class="main-container">
        <%- include('partials/sidebar', { page: 'orders' }) %>
        <div class="content-container">
            <h1>Orders</h1>

            <!-- Orders Table -->
            <div class="table-container">
                <table id="ordersTable" class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Grand Total</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Bill To</th>
                            <th>Ship To</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            // Initialize DataTable
            $('#ordersTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: '/admin/orders', // API call to fetch order data
                columns: [
                    { data: 'orderno' }, // Order ID
                    { data: 'grand_total', render: (data) => `â‚¹${data.toFixed(2)}` }, // Grand Total
                    { data: 'order_date', render: (data) => new Date(data).toLocaleDateString() }, // Order Date
                    { 
                             data: 'order_status',
                             render: function (data) {
                               let statusColors = {
                                   'Placed': '#007bff',     // Blue
                                   'Confirmed': '#17a2b8',  // Light Blue
                                   'Shipped': '#ffc107',    // Orange
                                   'Delivered': '#28a745',  // Green
                                   'Cancelled': '#dc3545'   // Red
                               };

                                let bgColor = statusColors[data] || '#6c757d'; // Default to gray if status is unknown
                                                    
                                return `<span style="background-color: ${bgColor}; color: white; padding: 5px 10px; border-radius: 5px;">${data}</span>`;
                            }
                    },
                    { 
                        data: 'user', 
                        render: function (data, type, row) {
                            return data ? data.username : row.email; // Show username if user exists, otherwise email
                        } 
                    }, // Bill To
                    { data: 'telephone' }, // Ship To
                    {
                        data: '_id',
                        render: function (data) {
                            return `
                                <a href="/admin/orders/${data}" class="btn btn-sm btn-primary">View</a>
                                <a href="/admin/orders/track/${data}" class="btn btn-sm btn-secondary ms-2">Track</a>
                            `;
                        }
                    } // Actions
                ]
            });
        });
    </script>
</body>
</html>
