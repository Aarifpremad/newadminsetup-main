<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <link rel="stylesheet" href="/dashboard.css">
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <!-- DataTables Buttons CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.3/css/buttons.dataTables.min.css">
    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f3f4f6;
            margin: 0;
        }

        .main-container {
            display: flex;
            min-height: 100vh;
        }

        .content-container {
            flex: 1;
            padding: 20px;
        }

        .user-details-container {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-top: 1rem;
            padding: 20px;
        }

        .user-details-header {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-bottom: 20px;
        }

        .user-details-header img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            border: 2px solid #ddd;
        }

        .user-info {
            flex-grow: 1;
        }

        .user-info h2 {
            margin: 0;
            font-size: 26px;
        }

        .user-info p {
            margin: 5px 0;
            font-size: 18px;
            color: #666;
        }

        .user-actions button {
            padding: 10px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            color: #fff;
            cursor: pointer;
            margin: 5px;
        }

        .btn-status {
            background-color: #2196f3;
            transition: background-color 0.3s ease;
        }

        .btn-status:hover {
            background-color: #1976d2;
        }

        .active {
            background-color: #007bff !important;
        }

        .order-details {
            margin-top: 40px;
            display: none;
        }

        .order-summary td, .order-summary th {
            padding: 10px;
            text-align: left;
        }

        .order-summary tr:hover {
            background-color: #f0f0f0;
        }

        .table-container {
            margin-top: 30px;
            background: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .pagination-container {
            margin-top: 20px;
            text-align: center;
        }

        .pagination-btn {
            padding: 8px 12px;
            border: 1px solid #ddd;
            margin: 5px;
            cursor: pointer;
        }

        .current-page {
            background-color: #007bff;
            color: white;
        }

        /* Loading spinner */
        .spinner {
            border: 2px solid #f3f3f3;
            border-top: 2px solid #3498db;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 20px auto;
            display: none;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .user-details-header {
                flex-direction: column;
                align-items: center;
            }

            .user-details-header img {
                margin-bottom: 10px;
            }
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>

    <div class="main-container">
        <%- include('partials/sidebar', { page: 'orderDetails' }) %>

        <div class="content-container">
            <div class="user-details-container">
                <h6>Order ID: <%= OrderDetils.orderno %></h6>
                <div class="user-actions">
                    <button class="btn-status active" id="orders-btn">Order Details</button>
                    <button class="btn-status" id="shipment-btn">Shipment</button>
                    <button class="btn-status" id="invoice-btn">Invoice</button>
                </div>

                <!-- Order Details Tab -->
                <div id="order-details" class="order-details">
                    <h4>Order Summary</h4>
                    <table class="table order-summary">
                        <tr>
                            <th>Email</th>
                            <td><%= OrderDetils.email %></td>
                        </tr>
                        <tr>
                            <th>Telephone</th>
                            <td><%= OrderDetils.telephone %></td>
                        </tr>
                        <tr>
                            <th>Grand Total</th>
                            <td><%= OrderDetils.grand_total %></td>
                        </tr>
                        <tr>
                            <th>Payment Mode</th>
                            <td><%= OrderDetils.payment_mode %></td>
                        </tr>
                        <tr>
                            <th>Order Status</th>
                            <td><%= OrderDetils.order_status %></td>
                        </tr>
                    </table>

                    <h4>Address</h4>
                    <% Address.forEach(address => { %>
                        <div>
                            <h5><%= address.addresstype.charAt(0).toUpperCase() + address.addresstype.slice(1) %> Address</h5>
                            <p><%= address.firstname %> <%= address.lastname %></p>
                            <p><%= address.streetaddress %>, <%= address.towncity %>, <%= address.state %>, <%= address.country %> - <%= address.postalcode %></p>
                            <p><%= address.telephone %></p>
                            <p>Order Notes: <%= address.ordernotes %></p>
                        </div>
                    <% }); %>

                    <h4>Ordered Products</h4>
                    <table class="table order-summary">
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                        </tr>
                        <% orderproduct.forEach(product => { %>
                            <tr>
                                <td><%= product.product_id.name %></td>
                                <td><%= product.product_quantity %></td>
                                <td><%= product.product_price %></td>
                                <td><%= product.total_amount %></td>
                            </tr>
                        <% }); %>
                    </table>
                    <div class="order-summary">
                        <table class="table">
                            <tr>
                                <th>Grand Total</th>
                                <td><%= OrderDetils.grand_total %></td>
                            </tr>
                            <tr>
                                <th>Shipping Charge</th>
                                <td><%= OrderDetils.shipping_charge || '0' %></td>
                            </tr>
                            <tr>
                                <th>Tax</th>
                                <td><%= OrderDetils.tax || '0' %></td>
                            </tr>
                            <tr>
                                <th>Total Paid</th>
                                <td>0</td>
                            </tr>
                            <tr>
                                <th>Total Due</th>
                                <td>0</td>
                            </tr>
                        </table>
                    </div>
                    <h4>Order Notes</h4>
                    <p><%= OrderDetils.items[0]?.ordernotes || 'No notes available' %></p>
                </div>

                <div class="spinner" id="loading-spinner"></div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.html5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Show and hide loading spinner during section switch
        function showLoading() {
            $('#loading-spinner').show();
        }

        function hideLoading() {
            $('#loading-spinner').hide();
        }

        // Button click logic to toggle between sections
        $('#orders-btn').on('click', function() {
            showLoading();
            setTimeout(function() {
                $('#order-details').show();
                $('#shipment-details').hide();
                $('#invoice-details').hide();
                $(this).addClass('active');
                $('#shipment-btn').removeClass('active');
                $('#invoice-btn').removeClass('active');
                hideLoading();
            }, 500);
        });

        $('#shipment-btn').on('click', function() {
            showLoading();
            setTimeout(function() {
                $('#order-details').hide();
                $('#shipment-details').show();
                $('#invoice-details').hide();
                $(this).addClass('active');
                $('#orders-btn').removeClass('active');
                $('#invoice-btn').removeClass('active');
                hideLoading();
            }, 500);
        });

        $('#invoice-btn').on('click', function() {
            showLoading();
            setTimeout(function() {
                $('#order-details').hide();
                $('#shipment-details').hide();
                $('#invoice-details').show();
                $(this).addClass('active');
                $('#orders-btn').removeClass('active');
                $('#shipment-btn').removeClass('active');
                hideLoading();
            }, 500);
        });
    </script>
</body>
</html>
