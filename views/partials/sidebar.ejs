<style>
    .active {
        color: #fff;
        background-color: #007bff;
    }

    .sub-menu {
        display: none;
        padding-left: 20px;
    }

    .sidebar a.active {
        background-color: #0056b3;
    }

    .sidebar a:hover {
        background-color: #0069d9;
        color: white;
    }
</style>

<script>
    document.querySelectorAll('.toggle').forEach(toggle => {
        toggle.addEventListener('click', function () {
            const subMenu = this.nextElementSibling;
            const isActive = subMenu.style.display === 'block';

            document.querySelectorAll('.sub-menu').forEach(menu => menu.style.display = 'none');

            subMenu.style.display = isActive ? 'none' : 'block';
        });
    });

    // Expand the active section on page load
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.toggle').forEach(toggle => {
            if (toggle.classList.contains('active')) {
                toggle.nextElementSibling.style.display = 'block';
            }
        });
    });
</script>

