<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link rel="stylesheet" href="/dashboard.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <style>
        .main-container {
            display: flex;
        }
        .content-container {
            flex: 1;
            padding: 20px;
        }
        .table-container {
            margin-top: 20px;
        }
        table.dataTable, table.dataTable th, table.dataTable td {
            border: 1px solid #dee2e6 !important;
        }
        table.dataTable th {
            background-color: #f8f9fa;
        }
        table.dataTable tbody tr:hover {
            background-color: #f1f3f5;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>
    <div class="main-container">
        <%- include('partials/sidebar', { page: 'userlist' }) %>
        <div class="content-container">
            <h1>User Management</h1>  

            <div class="table-container">
                <table id="userTable" class="table table-bordered">
                    <thead>
                        <tr>
                            <th>numeric_id</th>
                            <th>Name</th>
                            <th>Email</th> 
                            <th>Balance</th>
                            <th>Status</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            const table = $('#userTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '/admin/userslist',
                    type: 'GET',
                    data: function (d) {
                        d.search = d.search.value;
                        d.start = d.start;
                        d.length = d.length;
                    }
                },
                columns: [
                    { data: 'numeric_id' },
                    { 
                        data: 'firstname',
                        render: function (data, type, row) {
                            return `${row.firstname || ''} ${row.lastname || ''}`.trim(); // Show full name or blank
                        }
                    },
                    { data: 'email', defaultContent: '' },
                    { data: 'balance', defaultContent: '0' },
                    { 
                        data: 'isActive',
                        render: function (data) {
                            return data ? 'Active' : 'Inactive'; // Render Active/Inactive based on isActive field
                        }
                    },
                    { 
                        data: 'createdAt',
                        render: function (data) {
                            return data ? new Date(data).toLocaleString() : ''; // Show formatted date or blank
                        }
                    },
                    {
                        data: '_id',
                        render: function (data) {
                            return `<a href="/user-details/${data}" class="btn btn-info btn-sm">View</a>`; // View User Details Button
                        }
                    }
                ]
            });
        });
    </script>
</body>
</html>
